@model IEnumerable<MvcCoreApiCrudDepartamentos2023.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h1>Departamentos</h1>

<form method="post">
    <label>Selecciona localidad:</label>
    <input type="text" class="form-control" name="localidad" />
    <br/>
    <button class="btn btn-dark">Buscar por localidad</button>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <a asp-controller="Departamentos" asp-action="Details" asp-route-id="@item.IdDept">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
